# $Id: makefile.in,v 5.3 2010/06/30 22:09:43 tom Exp $

THIS	= copyrite

@make_include_left@@TD_LIB_rules@/td_lib.mk@make_include_right@

####### (Development) ##########################################################

USE	= man
SECTION	= 1
MANDIR  = $(INSTALL_MAN)/$(USE)$(SECTION)/

####### (Standard Lists) #######################################################
IT	=\
	$(MANDIR)$(THIS).$(SECTION)
SOURCES	=\
	$(THIS).man

####### (Standard Productions) #################################################
all:		$(SOURCES)	; @echo '** use "make install"'
clean:				; -$(RM) $(CLEAN)
distclean:	clean		; -$(RM) $(ALL)
run_test:
sources:	$(SOURCES)
install:	$(IT)
uninstall:				; rm -f $(IT)

####### (Details of Productions) ###############################################
$(IT):	$(THIS).man $(MANDIR)
	$(INSTALL_DATA) $(THIS).man $(IT)

$(MANDIR) :                             ; mkdir -p $@

$(SOURCES):
