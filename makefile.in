# $Id: makefile.in,v 5.5 2010/07/04 00:55:32 tom Exp $
# Top-level make-file for COPYRITE

SHELL		= /bin/sh
@SET_MAKE@

THIS		= copyrite

@make_include_left@@TD_LIB_rules@/td_lib.mk@make_include_right@

####### (Standard Lists) #######################################################

prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
mandir		= @mandir@
srcdir		= @srcdir@

SOURCES	= \
	makefile.in \
	COPYING \
	README

MFILES	= \
	src/makefile.in \
	test/makefile.in \
	user/makefile.in

DIRS	= \
	bin

RM		= -rm -f
CLEAN		= *.bak *.log *.out *.tst .nfs* core
PURE		= stamp-* config_h *.cache *.status

####### (Standard Productions) #################################################
all::		$(DIRS) $(SOURCES)
sources::	$(SOURCES)

all\
clean\
distclean\
run_test\
sources::	$(MFILES)
	cd src &&	$(MAKE) $(MAKE_OPTS) $@
	cd test &&	$(MAKE) $(MAKE_OPTS) $@
	cd user &&	$(MAKE) $(MAKE_OPTS) $@

clean\
distclean::
	$(RM) $(CLEAN)
distclean::
	$(RM) $(PURE)
	$(RM) -r $(DIRS)
	$(RM) */makefile
	$(RM) makefile

install::	$(INSTALL_BIN) bin/$(THIS)
	$(INSTALL_PROGRAM) -m 755 bin/$(THIS) $(INSTALL_BIN)
	$(INSTALL_DATA) bin/$(THIS).txt $(INSTALL_BIN)

uninstall::
	$(RM) $(INSTALL_BIN)/$(THIS)
	$(RM) $(INSTALL_BIN)/$(THIS).txt

install\
uninstall::
	cd user &&	$(MAKE) $(MAKE_OPTS) $@ INSTALL_MAN=$(INSTALL_MAN)

####### (Details of Productions) ###############################################

$(INSTALL_BIN) \
$(DIRS):			; mkdir -p $@

bin/$(THIS):	all

$(SOURCES):
